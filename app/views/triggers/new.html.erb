<h1>New Reminder</h1>

<%= form_with scope: :reminder, url: reminders_path, local: true do |form| %>

  <% if @reminder.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@reminder.errors.count, "error") %> prohibited
        this reminder from being saved:
      </h2>
      <ul>
        <% @reminder.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <p>
    <%= form.label :datetime %><br>
    <%= form.text_field :datetime %>
  </p>

  <p>
    <%= form.label :message %><br>
    <%= form.text_area :message %>
  </p>

  <p>
    <%= form.submit %>
  </p>
<% end %>

<%= link_to 'Back', reminders_path %>
